// @flow

/**
 * builtin
 */
import * as React from 'react';

/**
 * External
 */
import { Input, Form, Button } from 'antd';

/**
 * internal library
 */
import config from './TextInput.component.config';
import type { Props } from './TextInput.component.types';


/**
 * @returns {void} return void
 */
const onFinish = async (): void => {
  console.log('mantap');
};

/**
 * @param { Props } props - this is a prop types
 * @returns {React.Node} text input
 */
const TextInput = (props: Props): React.Node => {
  const { required, label, placeholder } = props;

  return (
    <Form
      layout="vertical"
      onFinish={onFinish}
    >
      <Form.Item
        label={<label> {label} <span style={{ color: 'red' }}>{required ? '*' : ''}</span> </label>}
        name={label}
        rules={[
          {
            required: true,
            message: `Please input ${label}!`,
          },
        ]}
      >
        <Input placeholder={placeholder} />
      </Form.Item>

      <Form.Item>
        <Button
          type="primary"
          htmlType="submit"
        >
          Tambah
        </Button>
      </Form.Item>

    </Form>

  );
};

TextInput.defaultProps = config.defaultProps;

export default TextInput;
